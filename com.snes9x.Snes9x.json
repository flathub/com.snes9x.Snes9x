{
    "app-id": "com.snes9x.Snes9x",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "20.08",
    "command": "snes9x-gtk",
    "rename-desktop-file": "snes9x-gtk.desktop",
    "rename-icon": "snes9x",
    "finish-args": [
        "--device=all",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "glslang",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON",
                "-DENABLE_HLSL=OFF"
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/*.a"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/KhronosGroup/glslang.git",
                    "tag": "11.4.0",
                    "commit": "18eef33bd7a4bf5ad8c69f99cb72022608cf6e73",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    }
                }
            ]
        },
        {
            "name": "snes9x",
            "buildsystem": "meson",
            "subdir": "gtk",
            "config-opts": [
                "-Dalsa=false",
                "-Doss=false",
                "-Dportaudio=false",
                "-Dsystem-zip=false"
            ],
            "post-install": [
                "install -Dm644 ../../com.snes9x.Snes9x.appdata.xml /app/share/appdata/com.snes9x.Snes9x.appdata.xml",
                "install -Dm644 ../../LICENSE /app/share/licenses/snes9x/LICENSE"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/snes9xgit/snes9x.git",
                    "tag": "1.60",
                    "commit": "913b75d07c6e8d54e966e2c4a79d7c55428007df",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    }
                },
                {
                    "type": "file",
                    "path": "com.snes9x.Snes9x.appdata.xml"
                }
            ]
        }
    ]
}
